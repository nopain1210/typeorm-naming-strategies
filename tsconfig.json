{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "noImplicitAny": true,
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
